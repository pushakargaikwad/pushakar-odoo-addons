<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pg_invoice_form_cancel_inherit" model="ir.ui.view">
            <field name="name">Sales Invoice Cancel</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_cancel.invoice_form_cancel_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_invoice_cancel']" position="replace">
                    <button name="action_invoice_cancel" type="object" states="draft,open" string="Cancel Invoice" groups="pg_invoice_cancellation_group.group_allow_to_cancel_invoice"/>
                </xpath>
            </field>
        </record>

        <record id="pg_invoice_supplier_cancel_form_inherit" model="ir.ui.view">
            <field name="name">Purchase Invoice Cancel</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_cancel.invoice_supplier_cancel_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_invoice_cancel']" position="replace">
                   <button name="action_invoice_cancel" type="object" states="draft,open" string="Cancel Invoice" groups="pg_invoice_cancellation_group.group_allow_to_cancel_invoice"/>
                </xpath>
            </field>
        </record>

        <record id="pg_payment_cancel_form_inherit" model="ir.ui.view">
            <field name="name">Payment Cancel</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account_cancel.payment_cancel_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='cancel']" position="replace">
                    <button name="cancel" attrs="{'invisible': [('state', 'in', ['draft','cancelled'])]}" string=" Cancel" type="object" groups="pg_invoice_cancellation_group.group_allow_to_cancel_invoice" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>