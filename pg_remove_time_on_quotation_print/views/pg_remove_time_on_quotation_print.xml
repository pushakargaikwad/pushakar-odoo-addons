<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <template id="report_remove_time_on_quotation_print_report" inherit_id="sale.report_saleorder_document">

            <xpath expr="//div/p[@t-field='doc.confirmation_date']" position="replace">

                <p t-field="doc.confirmation_date" t-options="{'widget': 'date'}" />

            </xpath>
            <xpath expr="//div/p[@t-field='doc.date_order']" position="replace">

                <p t-field="doc.date_order" t-options="{'widget': 'date'}" />

            </xpath>
            <xpath expr="//div/p[@t-field='doc.validity_date']" position="replace">

                <p t-field="doc.validity_date" t-options="{'widget': 'date'}" />

            </xpath>
        </template>
    </data>
</odoo>

